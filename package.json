{
  "name": "@micro/common",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "copy": "cp -rv proto dist/proto/",
    "build": "tsc && npm run copy",
    "prestart": "rimraf dist && mkdirp dist && npm run copy && npm run build",
    "authProto": "grpcnode client ls -I proto auth/service.proto",
    "rolesProto": "grpcnode client ls -I proto authorization/service.proto",
    "usersProto": "grpcnode client ls -I proto users/service.proto"
  },
  "author": "Mallowigi",
  "license": "ISC",
  "dependencies": {
    "@grpc/proto-loader": "^0.5.3",
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/microservices": "^6.10.3",
    "class-validator": "^0.11.0",
    "grpc": "^1.24.2",
    "install": "^0.13.0",
    "lodash": "^4.17.15",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "winston": "latest"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "grpcnode": "^1.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.7.2"
  },
  "description": "",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
